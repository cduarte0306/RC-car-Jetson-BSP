[Unit]
Description=RC Car Update Server
After=network-online.target
Wants=network-online.target

[Service]
ExecStart=/opt/rc-car/update-server/rc-car-updater
StandardOutput=append:/var/log/rc-car-updater.log
StandardError=append:/var/log/rc-car-updater.err
Restart=always

[Install]
WantedBy=multi-user.target