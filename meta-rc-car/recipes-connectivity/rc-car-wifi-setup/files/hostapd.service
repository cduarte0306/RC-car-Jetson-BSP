[Unit]
Description=Hostapd Access Point Service
After=network.target
Wants=network.target

[Service]
Type=oneshot
ExecStartPre=/sbin/ip addr flush dev wlan0
ExecStartPre=/sbin/ip addr add 192.168.4.1/24 dev wlan0
ExecStart=/usr/sbin/hostapd /etc/rc-car-wifi/hostapd.conf
RemainAfterExit=yes
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
